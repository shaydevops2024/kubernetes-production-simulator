{
  "difficulty": "medium",
  "duration": "25 min",
  "commands": [
    {
      "name": "List Ingress",
      "command": "kubectl get ingress -n k8s-multi-demo",
      "description": "View ingress resources"
    },
    {
      "name": "Describe Ingress",
      "command": "kubectl describe ingress -n k8s-multi-demo",
      "description": "See ingress rules and endpoints"
    },
    {
      "name": "Check Services",
      "command": "kubectl get svc -n k8s-multi-demo",
      "description": "List all services"
    },
    {
      "name": "Test ClusterIP",
      "command": "kubectl run test --image=busybox -n k8s-multi-demo --rm -it --restart=Never -- wget -O- http://k8s-demo-service:8000",
      "description": "Test internal service"
    },
    {
      "name": "Check NodePort",
      "command": "kubectl get svc k8s-demo-nodeport -n k8s-multi-demo",
      "description": "View NodePort assignment"
    },
    {
      "name": "Test Ingress Endpoint",
      "command": "curl -H 'Host: k8s-demo.local' http://localhost",
      "description": "Test ingress routing (if configured)"
    }
  ]
}
